<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:text="Quais animais de estimação você tem?"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBoxCaoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="58dp"
            android:text="Cão" />

        <CheckBox
            android:id="@+id/checkBoxGatoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/checkBoxCaoId"
            android:layout_marginTop="102dp"
            android:text="Gato" />

        <CheckBox
            android:id="@+id/checkBoxPapagaioId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/checkBoxCaoId"
            android:layout_marginTop="147dp"
            android:text="Papagaio" />

        <Button
            android:id="@+id/botaoMostrarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="131dp"
            android:layout_marginTop="215dp"
            android:text="Mostrar" />

        <TextView
            android:id="@+id/textoExibicaoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="192dp"
            android:layout_toEndOf="@+id/checkBoxPapagaioId"
            android:text="Mostrar..." />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>